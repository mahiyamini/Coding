int marks_summation(int* marks, int number_of_students, char gender) {
  //Write your code here.
  int i=0,sum=0;
  if(gender=='b')
  {
    while(i<number_of_students)
    {
        if(i%2==0)
        {
        sum=sum+*marks;
        }
        marks++;
        i++;
    }  
  }
  else
  {
     while(i<number_of_students)
    {
        if(i%2!=0)
        {
        sum=sum+*marks;
        }
        marks++;
        i++;
    }   
  }
  return sum;
}
